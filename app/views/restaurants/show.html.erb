<div class="container-login100" style="background-image: url('/images/restaurant.jpg');">
    <div class="restau p-l-55 p-r-55 p-t-65 p-b-54">
        <h1 style="text-align: center;"><b><%=@restaurant.name%></b></h1>
        <h2>Cuisine: <%=@restaurant.cuisine%></h2>
        <h2>Address: <%=@restaurant.address%></h2>
        <h2>Phone number: <%=@restaurant.phone_number%></h2>
        <h2>Rating: <%=@restaurant.rating%>/5</h2>

        <h1>Make a reservation</h1>
				<%if @errors%>
				<div class="alert alert-danger">
						<ul>
							<%@errors.each do |error|%>
							<li><%=error%></li>
							<%end%>
						</ul>
				</div>
				<%end%>
        <%=form_for @reservation do |f|%>
        <%=f.hidden_field :user_id%>
        <%=f.label :date%>
        <%=f.date_field :date%>
        <%=f.label :time%>
        <%=f.time_field :time%>
        <%=f.label :number_of_people%>
        <%=f.number_field :number_of_people%>
        <%=f.hidden_field :restaurant_id%>
        <%=f.submit 'Submit Reservation'%>
        <%end%>

        <h1>Comments:</h1>
        <%=link_to 'Make a review', new_restaurant_review_path(@restaurant)%>
        <ul class="list-group list-group-flush">
          <%@reviews.each do |review|%>
          <li class="list-group-item list-group-item-secondary"><%=review.content%></li>
          <%end%>
        </ul>
    </div>
</div>
