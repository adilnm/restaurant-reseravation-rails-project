					<%=r.text_field :name%><br>
					<%=r.label :cuisine%>
					<%=r.text_field :cuisine%><br>
					<%=r.label :address%>
					<%=r.text_field :address%><br>
					<%=r.label :phone_number%>
					<%=r.text_field :phone_number%><br>
					<%end%>
          <%=f.submit'Make Reservation', :class=>"btn btn-info"%>
          <%end%>
        </div>
      </div>
